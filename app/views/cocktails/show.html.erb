
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <h1><%= @cocktail.name %></h1>
</div>

<div class='container-show'>

  <div class='card-show'>
    <p>Name: <%= @cocktail.name %></p>
    <p>Description: <%= @cocktail.description %></p>
  </div>

  <div class='card-show'>
    <h3> Ingredients </h3>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to 'delete', cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure you would like to delete?" } %></li>
      <% end %>
    </ul>

  </div>
</div>
<div class="container">
  <h3> Add an Ingredient </h3>
    <%= simple_form_for [ @cocktail, @dose ] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient, collection: @ingredients.order('name ASC') %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
</div>
