<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1"> <i class="far fa-moon"></i><%= link_to 'ocktails', cocktails_path %>  <i class="fas fa-cocktail"></i></span>
  <p><%= link_to 'Back to Main', cocktails_path, class: 'button' %></p>
</nav>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <h1><%= @cocktail.name %></h1>
</div>
<div class='container-show'>

  <div class='card-show'>
    <p>Name: <%= @cocktail.name %></p>
    <p>Description: <%= @cocktail.description %></p>
  </div>

  <div class='card-show'>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %>
        <%= Ingredient.find(dose.ingredient_id).name %>
        <%= link_to 'delete', cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure you would like to delete?" } %></li>
      <% end %>
    </ul>
    <p><%= link_to 'Add an Ingredient', new_cocktail_dose_path(@cocktail), class: 'button' %> </p>
  </div>
</div>
