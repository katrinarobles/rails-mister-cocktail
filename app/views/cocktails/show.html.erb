<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1"><%= @cocktail.name %></span>
  <p><%= link_to 'Back to Main', cocktails_path %></p>
</nav>
<div class="container">
<h2><%= @cocktail.name %></h2>
  <p>Name: <%= @cocktail.name %></p>
  <p>Description: <%= @cocktail.description %></p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %>
      <%= Ingredient.find(dose.ingredient_id).name %>
      <%= link_to 'delete', cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure you would like to delete?" } %></li>
    <% end %>
  </ul>
  <p><%= link_to 'Add an Ingredient', new_cocktail_dose_path(@cocktail) %> </p>
</div>
